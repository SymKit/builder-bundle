<div data-controller="content-block" data-content-block-id-value="{{ block.id }}"
    class="group/cta relative my-12 not-prose">
    {# CTA Settings Toolbar #}
    <div
        class="absolute -top-10 left-0 flex items-center gap-2 p-1 bg-white dark:bg-gray-800 rounded-lg border border-gray-100 dark:border-white/10 shadow-lg opacity-0 group-hover:opacity-100 transition-opacity z-20">
        <input type="text" placeholder="Button URL..." value="{{ block.data.url }}"
            data-action="input->content-block#syncProperty" data-property="url"
            class="text-[10px] w-32 bg-gray-50 border-none rounded px-2 py-1 focus:ring-1 ring-indigo-500">
        <div class="w-px h-4 bg-gray-200 mx-1"></div>
        <button type="button" data-action="live#action focus->content-block#sync"
            data-live-action-param="updateBlockDataProperty" data-live-id-param="{{ block.id }}"
            data-live-property-param="style" data-live-value-param="primary"
            class="p-1 px-2 rounded text-[10px] font-bold uppercase transition-colors {{ block.data.style|default('primary') == 'primary' ? 'bg-indigo-600 text-white' : 'text-gray-400 hover:bg-gray-50' }}">Pri</button>
        <button type="button" data-action="live#action focus->content-block#sync"
            data-live-action-param="updateBlockDataProperty" data-live-id-param="{{ block.id }}"
            data-live-property-param="style" data-live-value-param="outline"
            class="p-1 px-2 rounded text-[10px] font-bold uppercase transition-colors {{ block.data.style|default('primary') == 'outline' ? 'border border-indigo-600 text-indigo-600' : 'text-gray-400 hover:bg-gray-50' }}">Out</button>
    </div>

    <div
        class="flex flex-col items-center text-center p-12 bg-indigo-50 dark:bg-indigo-500/5 rounded-3xl border-2 border-dashed border-indigo-100 dark:border-indigo-500/20">
        <div contenteditable="true" data-action="input->content-block#syncProperty" data-property="text"
            class="text-2xl font-black text-gray-900 dark:text-white outline-hidden mb-6"
            placeholder="Click-worthy headline...">{{ block.data.text|raw }}</div>

        <div contenteditable="true" data-action="input->content-block#syncProperty" data-property="buttonText"
            class="inline-flex items-center justify-center px-8 py-3 rounded-full text-sm font-bold shadow-xs transition-all outline-hidden {{ block.data.style|default('primary') == 'primary' ? 'bg-indigo-600 text-white hover:bg-indigo-700' : 'border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-50' }}"
            placeholder="Button Label">{{ block.data.buttonText|raw }}</div>
    </div>
</div>