<div class="relative min-h-[1.5em]">
    {% if (block.data.editMode|default('visual')) == 'html' %}
        <textarea 
            id="{{ block.id }}-html"
            data-content-block-target="htmlEditor"
            data-action="input->content-block#syncHtml"
            class="w-full min-h-[200px] p-4 bg-gray-950 text-gray-300 font-mono text-xs rounded-lg border border-gray-800 outline-none focus:ring-0 resize-y"
            spellcheck="false"
        >{{ block.data.items|reduce((carry, item) => carry ~ "<li>" ~ item.content ~ "</li>", "<" ~ block.data.type ~ ">") ~ "</" ~ block.data.type ~ ">" }}</textarea>
    {% else %}
    <{{ block.data.type }} class="space-y-1 relative">
        {# List Type Switcher #}
        <div class="absolute -top-10 right-0 flex items-center gap-0.5 bg-white dark:bg-gray-800 border border-gray-100 dark:border-white/10 rounded-lg p-0.5 shadow-sm opacity-0 group-hover:opacity-100 transition-opacity z-[60]">
            <button type="button" 
                    data-action="live#action" 
                    data-live-action-param="updateBlockDataProperty" 
                    data-live-id-param="{{ block.id }}" 
                    data-live-property-param="type" 
                    data-live-value-param="ul"
                    class="p-1 rounded {{ block.data.type == 'ul' ? 'bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400' : 'text-gray-400 hover:text-gray-600 dark:hover:text-gray-300' }} transition-colors"
                    title="Bulleted List"
            >
                {{ ux_icon('heroicons:list-bullet-16-solid', {class: 'w-4 h-4'}) }}
            </button>
            <div class="w-px h-4 bg-gray-100 dark:bg-white/5"></div>
            <button type="button" 
                    data-action="live#action" 
                    data-live-action-param="updateBlockDataProperty" 
                    data-live-id-param="{{ block.id }}" 
                    data-live-property-param="type" 
                    data-live-value-param="ol"
                    class="p-1 rounded {{ block.data.type == 'ol' ? 'bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400' : 'text-gray-400 hover:text-gray-600 dark:hover:text-gray-300' }} transition-colors"
                    title="Numbered List"
            >
                {{ ux_icon('heroicons:queue-list-16-solid', {class: 'w-4 h-4'}) }}
            </button>
        </div>
        {% for i, item in block.data.items %}
            <li class="group/item relative list-none flex items-start gap-3">
                        <span class="mt-2.5 flex-none w-1.5 h-1.5 rounded-full {{ block.data.type == 'ul' ? 'bg-indigo-500' : '' }} text-xs font-bold text-indigo-500 flex items-center justify-center">
                            {{ block.data.type == 'ol' ? loop.index : '' }}
                        </span>
                        <div contenteditable="true"
                             id="{{ block.id }}-item-{{ i }}"
                             data-action="input->content-block#syncCollection mouseup->content-block#onSelectionChange"
                             data-property="items"
                             data-index="{{ i }}"
                             class="outline-none flex-auto min-h-[1.5em] py-1"
                             placeholder="List item..."
                        >{{ item.content|raw }}</div>
                        
                        {# Item actions #}
                        <div class="absolute -right-16 top-1 flex items-center gap-1 opacity-0 group-hover/item:opacity-100 transition-opacity bg-white dark:bg-gray-900 shadow-sm border border-gray-100 dark:border-white/5 rounded p-0.5">
                                <button type="button" 
                                        data-action="live#action" 
                                        data-live-action-param="updateBlockDataCollection" 
                                        data-live-id-param="{{ block.id }}" 
                                        data-live-property-param="items" 
                                        data-live-action-param-action="add"
                                        data-live-index-param="{{ i }}"
                                        class="p-1 hover:bg-gray-100 dark:hover:bg-white/5 rounded text-gray-400 hover:text-indigo-500"
                                >
                                    {{ ux_icon('heroicons:plus-16-solid', {class: 'w-3.5 h-3.5'}) }}
                                </button>
                                {% if block.data.items|length > 1 %}
                                    <button type="button" 
                                            data-action="live#action" 
                                            data-live-action-param="updateBlockDataCollection" 
                                            data-live-id-param="{{ block.id }}" 
                                            data-live-property-param="items" 
                                            data-live-action-param-action="remove"
                                            data-live-index-param="{{ i }}"
                                            class="p-1 hover:bg-red-50 dark:hover:bg-red-900/20 rounded text-gray-400 hover:text-red-500"
                                    >
                                        {{ ux_icon('heroicons:x-mark-16-solid', {class: 'w-3.5 h-3.5'}) }}
                                    </button>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}
                </{{ block.data.type }}>
        {% endif %}
</div>
