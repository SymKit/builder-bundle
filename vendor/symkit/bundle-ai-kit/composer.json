{
    "name": "symkit/bundle-ai-kit",
    "description": "AI rules and optional skills for building Symfony bundles (best practices, SOLID, AbstractBundle, quality tooling)",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "SymKit",
            "email": "s.dieunidou@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "composer-plugin-api": "^2.0 || ^3.0"
    },
    "require-dev": {
        "composer/composer": "^2.0 || ^3.0",
        "deptrac/deptrac": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.68",
        "infection/infection": "^0.29",
        "phpro/grumphp": "^2.10",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Symkit\\BundleAiKit\\Composer\\": "src/Composer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symkit\\BundleAiKit\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Symkit\\BundleAiKit\\Composer\\Plugin"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true,
            "infection/extension-installer": true
        }
    }
}
